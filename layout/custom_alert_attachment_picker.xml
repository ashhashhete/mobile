<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stepCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/common_header"
    android:layout_margin="@dimen/_20sdp"
    app:background="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp"
    app:cardPreventCornerOverlap="true"
    app:strokeColor="@color/lightTextColor"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_Camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center_vertical"
            android:text="Camera"
            android:textSize="@dimen/_12ssp"
            app:drawableStartCompat="@drawable/ion_camera_svg" />

        <TextView
            android:id="@+id/txt_Gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center_vertical"
            android:text="Choose from Gallery"
            android:textSize="@dimen/_12ssp"
            app:drawableStartCompat="@drawable/icon_gallery_svg" />

        <TextView
            android:id="@+id/txt_ChooseFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Choose PDF"
            android:textSize="@dimen/_12ssp"
            app:drawableStartCompat="@drawable/baseline_picture_as_pdf_24" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>


