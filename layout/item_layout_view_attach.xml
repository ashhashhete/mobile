<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="visible"
                android:orientation="vertical"
                android:id="@+id/viewLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:weightSum="2"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <TextView
                        android:layout_weight=".7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unit Attachments"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:background="@drawable/button_rectangle"
                        android:elevation="@dimen/_10sdp"

                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>


                <LinearLayout
                    android:weightSum="2"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Type of Proof:"
                        android:textStyle="bold"
                        android:textColor="@color/darkTextColor" />

                    <TextView
                        android:id="@+id/edtypeProof"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="@string/residential_proof_1"
                        android:textColor="@color/darkTextColor" />

                </LinearLayout>


                <LinearLayout
                    android:weightSum="2"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Type of Document:"
                        android:textStyle="bold"
                        android:textColor="@color/darkTextColor" />

                    <TextView
                        android:id="@+id/docType"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Aadhaar Card"
                        android:textColor="@color/darkTextColor" />

                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Name of the Document:"
                        android:textColor="@color/darkTextColor" />

                    <TextView
                        android:id="@+id/docName"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Govind Sonawane"
                        android:textColor="@color/darkTextColor" />

                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Date of Document:"
                        android:textColor="@color/darkTextColor" />

                    <TextView
                        android:id="@+id/docDate"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="04/12/2023"
                        android:textColor="@color/darkTextColor" />

                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Remarks:"
                        android:textStyle="bold"
                        android:textColor="@color/darkTextColor" />

                    <TextView
                        android:id="@+id/remarks"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="@string/residential_proof_1"
                        android:textColor="@color/darkTextColor" />

                </LinearLayout>

                <TextView
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_marginTop="20dp"
                    android:layout_weight=".7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attachment"
                    android:textStyle="bold"
                    android:textColor="@color/darkTextColor" />


                <androidx.recyclerview.widget.RecyclerView
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageRecycler"
                    android:background="@drawable/rounded_edittext"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="80dp"
                    android:scrollbars="vertical">

                </androidx.recyclerview.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:visibility="gone"
                    android:id="@+id/rotatelyt"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:src="@drawable/black_arrow_down"
                        android:rotation="90"
                        android:id="@+id/imgPrev"
                        android:layout_height="@dimen/_25sdp"/>
                    <TextView
                        android:layout_width="@dimen/_25sdp"
                        android:text="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/txtOne"
                        android:layout_height="@dimen/_25sdp"/>
                    <TextView
                        android:layout_width="@dimen/_25sdp"
                        android:text="2"
                        android:gravity="center"
                        android:id="@+id/txtTwo"
                        android:textStyle="bold"
                        android:layout_height="@dimen/_25sdp"/>
                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:src="@drawable/black_arrow_down"
                        android:rotation="270"
                        android:id="@+id/imgNext"
                        android:layout_height="@dimen/_25sdp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/deleteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="2"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <TextView
                        android:layout_weight=".7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update Attachment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_delete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:background="@drawable/button_rect_red"
                        android:elevation="@dimen/_10sdp"

                        android:text="Delete"
                        android:textAllCaps="false"
                        android:textColor="#ba2422"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>


                <EditText
                    android:id="@+id/catDoc"
                    style="@style/MyEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/rounded_edittext"
                    android:backgroundTint="@color/fixEditTextColor"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:text="@string/residential_proof_1" />


                <EditText
                    android:id="@+id/typeDoc"
                    style="@style/MyEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rounded_edittext"
                    android:backgroundTint="@color/fixEditTextColor"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:text="Aadhaar Card" />


                <EditText
                    android:visibility="gone"
                    android:id="@+id/nameDoc"
                    style="@style/MyEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rounded_edittext"
                    android:singleLine="true"
                    android:text="Govind Jayram" />


                <EditText
                    android:visibility="gone"
                    android:id="@+id/calDeleteView"
                    style="@style/MyEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rounded_edittext"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/svg_icon_calendar"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="number"
                    android:singleLine="true"
                    android:text="12/05/1989"
                    android:layout_marginLeft="@dimen/_5sdp"
                    />

                <EditText
                    android:id="@+id/remarksDoc"
                    style="@style/MyEditText"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rounded_edittext"
                    android:singleLine="true"
                    android:gravity="center|left|top"
                    android:text="Remarks Text" />


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageRecyclerDelete"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="80dp"
                    android:scrollbars="vertical"
                    >

                </androidx.recyclerview.widget.RecyclerView>


                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rounded_edittext"
                    android:orientation="horizontal"
                    android:weightSum="2"

                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:id="@+id/btnBrowseEdit"
                        android:layout_gravity="center"
                        style="@style/MyEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_9sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:backgroundTint="@color/main_color"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_3sdp"
                            android:paddingEnd="@dimen/_3sdp"
                            android:text="Browse"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_9sdp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_3sdp"
                            android:paddingEnd="@dimen/_3sdp"
                            android:text="OnlyJPEG and PDF files with max size of 10 MB"
                            android:textColor="@color/summaryEditBoarderColor"
                            android:textSize="@dimen/_8ssp" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="80dp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="@dimen/_10sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_weight="1"
                        android:background="@drawable/button_rectangle"
                        android:elevation="@dimen/_10sdp"
                        android:padding="12dp"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:id="@+id/updateMediaBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_weight="1"
                        android:background="@drawable/button_rectangle"
                        android:backgroundTint="@color/main_color"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    </androidx.cardview.widget.CardView>



</LinearLayout>