<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stepCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/common_header"
    android:layout_margin="@dimen/_20sdp"
    app:background="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp"
    app:cardPreventCornerOverlap="true"
    app:strokeColor="@color/lightTextColor"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="OTP Verification"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/img_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_close_24" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#D9D9D9" />


        </LinearLayout>

        <TextView
            android:id="@+id/txtOtpSentMobileNumberMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="We've sent OTP to your mobile number at *******082. Please enter 6 digit code receive"
            android:textColor="@color/darkTextColor" />


        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_one"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="20dp"
                android:layout_margin="@dimen/_3sdp"
                android:background="@drawable/rounded_edittext"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                />

            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/et_two"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="20dp"
                android:layout_margin="@dimen/_3sdp"
                android:background="@drawable/rounded_edittext"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                />

            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/et_three"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="20dp"
                android:layout_margin="@dimen/_3sdp"
                android:background="@drawable/rounded_edittext"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                />

            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/et_four"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="20dp"
                android:layout_margin="@dimen/_3sdp"
                android:background="@drawable/rounded_edittext"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                />

            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/et_five"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="20dp"
                android:layout_margin="@dimen/_3sdp"
                android:background="@drawable/rounded_edittext"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                />

            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/et_six"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="20dp"
                android:layout_margin="@dimen/_3sdp"
                android:background="@drawable/rounded_edittext"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/btn_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@drawable/round_corners"
            android:backgroundTint="@color/main_color"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp">

            <TextView

                android:id="@+id/txt_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_resend"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend OTP in "
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:padding="5dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/resendTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60s"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:padding="5dp"/>
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/resendOTP"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESEND OTP"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue_theme"
            android:textSize="@dimen/_11ssp" />


        <TextView
            android:id="@+id/continueWithoutOTP"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue without OTP"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>


